DEPLIBS  = ../libstdc++.a
LDLIBS   = -L.. -lstdc++
MDEPLIBS = $(DEPLIBS)
MLDLIBS  = $(LDLIBS) -lm

#### package, host, target, and site dependent Makefile fragments come in here.
##

CXXFLAGS = -g -O -felide-constructors

# We need to set LD_LIBRARY_PATH in the environment so that the dynamic
# linker can find the shared library.
.EXPORT_ALL_VARIABLES:
LD_LIBRARY_PATH = ..

tcomplex.o: ${srcdir}/../complext.hI ${srcdir}/../dcomplex.hI
tcomplex: tcomplex.o $(MDEPLIBS)
	$(CXX) -o tcomplex tcomplex.o $(MLDLIBS)

tstring.o: ${srcdir}/../bastring.hI

